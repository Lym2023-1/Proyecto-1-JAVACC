}



TOKEN :
{
		<NUM: (<DIGIT>)+ >
		|  	<#DIGIT: ["0"-"9"] >

}

TOKEN:  /* Palabras reservadas*/
{
  		<ROBOT_R:  "robot_r" >
	  	| <THEN:   "then:">
	  	| <ELSE:   "else:">
	  	| <DO:     "do:">
 		| <VARS:   "vars" >
 		| <PROCS:  "procs" >
		| <WHILE:  "while:" >
		| <IF:     "if:"  >
		| <REPEAT: "repeat:"  >
}

TOKEN :
{
 	 <NAME : (< LETTER >)(< DIGIT >|< LETTER >)* >
	| < #LETTER   : ["a"-"z","A"-"Z"] >
}



TOKEN:
{
	<ORIENTATION: "north"| "south" | "east" | "west"  >
	| <VIEW:  "front" |"right"| "left" |"back" >
	| <TURN: "left"|"right"|"around" >
}


