void main():
	{}
	{
		<ROBOT_R> (vars())? (procs())?  block()
	}

void vars():
	{String var1,var2;}
	{
		<VARS> var1=<NAME> {token_source.variables.put(var1,"undefined");}
		("," var2=<NAME> {token_source.variables.put(var2,"undefined");})* ";"
	}

void procs():
	{}
	{
	<PROCS> (procDefinition())+
	}


	
void procDefinition():
	{String procName; int params; }
	{
		procName=<NAME> "[" "|" params=parameters() "|" multipleExecution() {token_source.variables_temporales=new HashSet<String>(); } "]"
		{saveProcInfo(procName,params);}
	 }

int parameters():
	{String parameter1, parameter2; }
	{
		(parameter1= < NAME > {token_source.variables_temporales.add(parameter1);} ("," parameter2=<NAME>  {token_source.variables_temporales.add(parameter2);})*)? 
		{return token_source.variables_temporales.length;} 	
	}

void saveProcInfo(String procName, int params):
	{}
	//Se guarda el nombre del procedimiento y se revisa que no sea variable ni condicion
	{
		{
			if (token_source.variables.containsKey(procName))throw new Error("El procedimiento ya se declaró como variable");
			else if (token_source.condicionales.contains(procName))throw new Error("El procedimiento es una condición");
			else token_source.procedimientos.put(procName,params);
		}
	}


void block():
	{}
	{
	("[" multipleExecution() "]") | (singleExecution())
	}


	
void multipleExecution():
	{}
	{
	singleExecution() ( ";"  singleExecution())* 
	}


void singleExecution():
	{}
	{
	declaredProcedureCall()|controlStructure()|procedureCall()
	}
void procedureCall():
	{String procName;int cantidad;}
	{
	procName=< NAME > ":" cantidad=declaredParameters() {if (token_source.procedimientos.containsKey(procName)==false)throw new Error("El procedimiento no esta definido");
														else if (token_source.procedimientos.get(procName)!=cantidad) throw new Error("Faltan parametros");}
	}
	
void controlStructure():
	{}
	{
		(IF()) | (WHILE()) | (REPEAT())
	}



void declaredParameters():
	{int cantidad; String parameter1,parameter2;}
	//Se revisa que los parametros esten definidos
	{
		(parameter1= < NAME > {checkParameters(parameter1); cantidad++ ;} ("," parameter2=< NAME >{checkParameters(parameter2); cantidad++; }  )*)?
		{return cantidad;}
	}
	


